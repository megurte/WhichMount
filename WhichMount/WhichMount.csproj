<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  <Import Project="Dalamud.Plugin.Bootstrap.targets"/>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework> <!-- или другая версия, соответствующая вашим требованиям -->
    <Version>0.0.0.1</Version>
    <Description>Searching for other player's mount</Description>
    <PackageProjectUrl>https://github.com/goatcorp/SamplePlugin</PackageProjectUrl>
    <PackageLicenseExpression>AGPL-3.0-or-later</PackageLicenseExpression>
    <IsPackable>false</IsPackable>
    <RootNamespace>SamplePlugin</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="..\..\DalamudPackager-master\.gitattributes">
      <Link>DalamudPackager-master\.gitattributes</Link>
    </Content>
    <Content Include="..\..\DalamudPackager-master\.gitignore">
      <Link>DalamudPackager-master\.gitignore</Link>
    </Content>
    <Content Include="..\..\DalamudPackager-master\DalamudPackager.sln">
      <Link>DalamudPackager-master\DalamudPackager.sln</Link>
    </Content>
    <Content Include="..\..\DalamudPackager-master\LICENCE">
      <Link>DalamudPackager-master\LICENCE</Link>
    </Content>
    <Content Include="..\..\DalamudPackager-master\README.org">
      <Link>DalamudPackager-master\README.org</Link>
    </Content>
    <Content Include="..\Data\goat.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      <Visible>false</Visible>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="HtmlAgilityPack" Version="1.11.61" />
    <PackageReference Include="Microsoft.Build" Version="17.10.4" />
    <PackageReference Include="YamlDotNet" Version="16.0.0" />
  </ItemGroup>
</Project>
